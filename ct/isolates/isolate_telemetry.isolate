{
  'includes': [
    'py.isolate',
  ],
  'conditions': [
    ['OS=="linux"', {
      'variables': {
        'files': [
          '../../../bin/isolate_telemetry',
        ],
      },
    }],
    ['OS=="win"', {
      'variables': {
        'files': [
          '../../../bin/isolate_telemetry.exe',
        ],
      },
    }],
  ],
  'variables': {
    'command': [
      '../../../bin/isolate_telemetry',
      '-logtostderr',
      '--run_id=<(RUN_ID)',
      '--chromium_hash=<(CHROMIUM_HASH)',
      '--patches=<(PATCHES)',
      '--out=${ISOLATED_OUTDIR}',
    ]
  }
}
