load(
    "//infra-sk:index.bzl",
    "karma_test",
    "sk_demo_page_server",
    "sk_element",
    "sk_element_puppeteer_test",
    "sk_page",
    "ts_library",
)

package(default_visibility = ["//visibility:public"])

sk_element(
    name = "paramset-sk",
    sass_deps = ["//infra-sk:elements-sk_scss"],
    sass_srcs = ["paramset-sk.scss"],
    ts_deps = [
        "//infra-sk/modules/ElementSk:element-sk",
        "@infra-sk_npm//common-sk",
        "@infra-sk_npm//elements-sk",
        "@infra-sk_npm//lit-html",
    ],
    ts_srcs = [
        "index.ts",
        "paramset-sk.ts",
    ],
)

ts_library(
    name = "paramset-sk_po",
    srcs = ["paramset-sk_po.ts"],
    deps = [
        "//infra-sk/modules/page_object",
        "@infra-sk_npm//common-sk",
    ],
