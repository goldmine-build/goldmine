karma_test(
    name = "test",
    src = "paramset-sk_test.ts",
    deps = [
        ":paramset-sk",
        ":paramset-sk_po",
        "//infra-sk/modules:test_util",
        "@infra-sk_npm//common-sk",
    ],
)

sk_page(
    name = "demo_page",
    html_file = "paramset-sk-demo.html",
    scss_entry_point = "paramset-sk-demo.scss",
    sk_element_deps = [":paramset-sk"],
    ts_deps = [
        "@infra-sk_npm//common-sk",
    ],
    ts_entry_point = "paramset-sk-demo.ts",
)

sk_demo_page_server(
    name = "demo_page_server",
    sk_page = "demo_page",
)

sk_element_puppeteer_test(
    name = "puppeteer_test",
    srcs = [":paramset-sk_puppeteer_test.ts"],
    sk_demo_page_server = ":demo_page_server",
    deps = [
        ":paramset-sk",
        ":paramset-sk_po",
        "//puppeteer-tests:util_lib",
        "@infra-sk_npm//@types/chai",
        "@infra-sk_npm//@types/puppeteer",
        "@infra-sk_npm//chai",
        "@infra-sk_npm//puppeteer",
    ],
)
