load("@rules_go//go:def.bzl", "go_binary", "go_library")
load("//bazel:app_container.bzl", "app_container")

go_library(
    name = "github_lib",
    srcs = ["main.go"],
    importpath = "go.goldmine.build/ci/go/triggers/github",
    visibility = ["//visibility:private"],
    deps = [
        "//go/common",
        "//go/httputils",
        "//go/profsrv",
        "//go/sklog",
        "@com_github_ejholmes_hookshot//:hookshot",
        "@com_github_ejholmes_hookshot//events",
