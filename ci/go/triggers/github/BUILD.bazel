app_container(
    name = "github_webhook_container",
    base = "@base",
    cmd = [],
    entrypoint = "/usr/local/bin/github",
    exe = "//ci/go/triggers/github:github",
    repository = "ghcr.io/goldmine-build/github-webhook",
)
