#!/bin/bash
# Builds and uploads a docker package for docserverk.
APPNAME=docserverk

set -x -e

# Copy files into the right locations in ${ROOT}.
copy_release_files()
{
INSTALL="install -D --verbose --backup=none"
${INSTALL} --mode=644 -T Dockerfile                ${ROOT}/Dockerfile
${INSTALL} --mode=755 -T ${GOPATH}/bin/docserverk  ${ROOT}/bin/docserverk
${INSTALL} --mode=644 -T ./res/js/core.js          ${ROOT}/usr/local/share/${APPNAME}/res/js/core.js
${INSTALL} --mode=644 -T ./res/img/logo.png        ${ROOT}/usr/local/share/${APPNAME}/res/img/logo.png
${INSTALL} --mode=644 -T ./res/css/docs.css        ${ROOT}/usr/local/share/${APPNAME}/res/css/docs.css
${INSTALL} --mode=644 -T ./templates/index.html    ${ROOT}/usr/local/share/${APPNAME}/templates/index.html
}

source ../bash/docker_build.sh
