include ../make/bazel.mk

build:
	$(BAZEL) build go/k8s-checker/...

release:
	$(BAZEL) run //k8s-checker:push_k8s_checker_container

push: release
	$(BAZEL) run //kube/pushk -- --use-temp-checkout k8s-checker

push_public: release
	$(BAZEL) run //kube/pushk -- --only-cluster skia-public k8s-checker

push_corp: release
	$(BAZEL) run //kube/pushk -- --only-cluster skia-corp k8s-checker
