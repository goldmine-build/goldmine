load("@rules_go//go:def.bzl", "go_binary", "go_library")
load("//bazel/go:go_test.bzl", "go_test")

go_library(
    name = "pushk_lib",
    srcs = ["main.go"],
    importpath = "go.goldmine.build/kube/go/pushk",
    visibility = ["//visibility:private"],
    deps = [
        "//go/common",
        "//go/exec",
        "//go/gerrit/rubberstamper",
        "//go/git",
        "//go/skerr",
        "//go/sklog",
        "//go/util",
    ],
)

go_binary(
    name = "pushk",
    data = [
        "//kube:attach.sh",
        "//kube/clusters:config.json",
    ],
    embed = [":pushk_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "pushk_test",
    srcs = ["main_test.go"],
    data = glob(["testdata/**"]),
    embed = [":pushk_lib"],
    deps = [
        "//go/util",
        "@com_github_stretchr_testify//assert",
    ],
)
