{
   "name": "Alerts for Skia Troopers",
   "version": "3.3",
   "description": "Alerts for Skia Troopers.",
   "permissions": [
     "cookies",
     "*://skia.org/*",
     "*://promalerts.skia.org/*",
     "*://alerts2.skia.org/*"
   ],
   "background": {
     "scripts": [
       "node_modules/skia-common-js/common.js",
       "background.js"
     ]
   },
   "browser_action": {
     "name": "Display all active alerts.",
     "default_popup": "popup.html"
   },
   "icons": {
     "16": "pencil16.png",
     "48": "pencil48.png",
     "128": "pencil128.png"
   },
  "manifest_version": 2
}
