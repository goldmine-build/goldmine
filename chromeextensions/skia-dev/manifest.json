{
   "name": "Assorted Tools for Skia Developers",
   "version": "3.7",
   "description": "Assorted Tools for Skia Developers.",
   "permissions": [
     "notifications",
     "storage",
     "webRequest",
     "webRequestBlocking",
     "*://skia.org/*",
     "https://gold.skia.org/",
     "https://perf.skia.org/",
     "http://skia-tree-status.appspot.com/",
     "*://skia-review.googlesource.com/",
     "*://skia.googlesource.com/*",
     "*://github.com/google/skia*"
   ],
   "background": {
     "scripts": [
       "node_modules/skia-common-js/common.js",
       "background.js"
     ]
   },
   "browser_action": {
     "name": "Display Skia status.",
     "default_popup": "popup.html",
     "default_icon": "pencil16.png"
   },
   "content_scripts": [
    {
      "matches": ["*://skia.googlesource.com/*", "*://github.com/google/skia*"],
      "js": ["hashtag.js"],
      "run_at": "document_end"
    }
  ],
   "icons": {
     "16": "pencil16.png",
     "48": "pencil48.png",
     "128": "pencil128.png"
   },
  "manifest_version": 2
}
