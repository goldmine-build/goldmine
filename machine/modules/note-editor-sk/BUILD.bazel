karma_test(
    name = "test",
    srcs = ["note-editor-sk_test.ts"],
    deps = [
        ":note-editor-sk",
        "//infra-sk/modules:test_util",
        "//machine/modules/json",
        "@infra-sk_npm//common-sk",
