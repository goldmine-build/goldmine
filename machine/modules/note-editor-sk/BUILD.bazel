    html_file = "note-editor-sk-demo.html",
    scss_entry_point = "note-editor-sk-demo.scss",
    sk_element_deps = [":note-editor-sk"],
    ts_deps = [
        "//machine/modules/json",
        "@infra-sk_npm//common-sk",
