load(
    "//infra-sk:index.bzl",
    "karma_test",
    "sk_demo_page_server",
    "sk_element",
    "sk_element_puppeteer_test",
    "sk_page",
)

package(default_visibility = ["//machine:__subpackages__"])

sk_element(
    name = "note-editor-sk",
    sass_deps = [
        "//infra-sk:elements-sk_scss",
        "//machine/modules/theme",
    ],
    sass_srcs = ["note-editor-sk.scss"],
    ts_deps = [
        "//machine/modules/json",
        "@infra-sk_npm//@types/dialog-polyfill",
        "@infra-sk_npm//common-sk",
        "@infra-sk_npm//dialog-polyfill",
    ],
    ts_srcs = [
        "index.ts",
        "note-editor-sk.ts",
    ],
