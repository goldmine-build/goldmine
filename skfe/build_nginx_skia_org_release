#!/bin/bash
APPNAME=nginx-skia-org

set -x -e

# Copy files into the right locations in ${ROOT}.
copy_release_files()
{
${INSTALL} --mode=644 -T ${APPNAME}/Dockerfile  ${ROOT}/Dockerfile
${INSTALL} --mode=644 -T ./k8s/nginx.conf       ${ROOT}/etc/nginx/nginx.conf
${INSTALL} --mode=644 -T ./k8s/default.conf     ${ROOT}/etc/nginx/conf.d/default.conf
}

source ../bash/docker_build.sh